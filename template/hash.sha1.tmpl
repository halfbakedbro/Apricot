{{template "base" .}}

{{define "title"}}SHA1{{end}}

{{define "main"}}


<div class="main">
    <h1>
        SHA1
    </h1>
    <div class="description">
        SHA1 Hash Function
    </div>
    <form action="/hash/sha1/" method="POST" id="sha1">
        <div class="input">
            <textarea name="text" placeholder="Enter here..." style="width: 12em"></textarea>
        </div>
        <div class="submit">
            <input id="execute" type="submit" value="hash" class="btn btn-default">
        </div>
    </form>
    <div class="output">
        <textarea id="output" placeholder="...." name="sha1" style="width: 12em">
            {{if .HashVal}}
                {{.HashVal}}
            {{end}}
        </textarea>
    </div>
</div>
{{end}}